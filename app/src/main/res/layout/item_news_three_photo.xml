<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.rayho.tsxiu.module_news.viewmodel.NewsViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_news_bg"
        android:clickable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp"
            android:maxLines="30"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="@{item.title}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                imageUrl_2="@{item.imageUrls[0]}"/>

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                imageUrl_2="@{item.imageUrls[1]}"/>

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                imageUrl_2="@{item.imageUrls[2]}"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:textColor="@color/middle_grey"
                android:textSize="13sp"
                android:text="@{item.user}"/>

            <TextView
                android:id="@+id/tv_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_user"
                android:textColor="@color/middle_grey"
                android:textSize="13sp"
                android:text="@{item.commentCounts}"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_comments"
                android:textColor="@color/middle_grey"
                android:textSize="13sp"
                android:text="@{item.time}"/>

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:src="@mipmap/more" />
        </RelativeLayout>
    </LinearLayout>
</layout>